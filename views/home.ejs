<%- include ('partials/header') %>
<%- include ('partials/navigation') %>


        <div class="container my-4">
            <div class="row justify-content-center"><!--Pesquisa-->
                <div class="col-md-8 col-10">
                    <form action="/search" method="post">
                        <div class="input-group mb-3 rounded-pill">
                            <input type="text" class="form-control" placeholder="Digite o nome da nota que gostaria de buscar" name="search">
                            <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
                        </div>
                    </form>
                </div>
            </div><!--Pesquisa | FIM-->

            <div>
                <div class="bg-warning rounded p-4 my-3"><!--Note-->
                    <h3 class="display-5">
                        Bem-vindo ao seu bloco de notas!
                    </h3>
                    <p class="text-muted">
                        31 de Janeiro de 2023
                    </p>
                    <p class="lead">
                        Pesquise suas notas na barra de pesquisa. Clique em opções para configurar sua conta ou em criar nota para adicionar notas. 
                    </p>
                </div><!--Note | FIM-->

               <% notes.forEach((obj, index)=>{ %>
                    <div class="bg-warning rounded p-4 my-3"><!--Note-->
                        <h3 class="display-6">
                            <%= obj.title %>
                        </h3>
                        <p class="text-muted">
                            <%= obj.date %>
                        </p>
                        <p class="lead">
                            <%=obj.content%>
                        </p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <form class="d-inline" action="/updateNote" method="post">
                                    <input type="hidden" value="<%= obj.title %>" name="title">
                                    <input type="hidden" value="<%= obj.content %>" name="content">
                                    <input type="hidden" value="<%= obj.id %>" name="id">
                                    <button type="submit" class="btn btn-secondary">
                                        <i class="bi bi-pen-fill"></i>
                                    </button>
                                </form>
                            </li>
                            <li class="list-inline-item">
                                <form class="d-inline" action="/deleteNote" method="post">
                                    <input type="hidden" value="<%=obj.id%>" name="id">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash3-fill"></i>
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div><!--Note | FIM-->
              <%  }) %>

            </div>
        </div>


<%-include ('partials/footer') %>






